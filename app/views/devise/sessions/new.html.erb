<body class="signup-body">
  <div class='signup-box mt-5 col-11 col-lg-6'>
    <div class='login-text text-center'>
      <h2>Log in</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">

        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>

        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions-btn text-center mb-1">
        <%= f.button :submit, "Log in", class: "login-button" %>
      </div>
    <% end %>
  </div>
    <div class="login-links text-center col-6 col-lg-3">
    <div class="mt-3">
      <%= link_to "Sign Up", "/users/sign_up", class: "login-link" %>
    </div>
    <div class="mt-2 mb-3">
      <%= link_to "Forgot Password?", "/users/password/new", class: "login-link" %>
    </div>
  </div>
</body>
