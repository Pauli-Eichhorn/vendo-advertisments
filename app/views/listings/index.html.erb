<div id="map"
     style="width: 100%; height: 350px; box-shadow: rgba(17, 17, 26, 0.05) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class='header'>
  <div class="search-bar mx-auto">
    <%= form_tag listings_path, class: "form-search d-flex col-8 mx-auto", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Screen"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class='cards-home'>
    <% @listings.each do |listing| %>
        <%= link_to listing_path(listing) do %>
          <div class='card'>
            <p> <%=  cl_image_tag listing.photo.key%></p>
            <div class="text-center"><h4><%= listing.name %></h4></div>
            <div class='card-index-content'>
              <h6><%= listing.description.first(70)%> ...</h6>
              <h6><strong>📍</strong> <%= listing.location %></h4>
              <h6><strong>🏷</strong> <%= listing.price %> €</h4>
              <h6><strong>Availability:</strong> <%= listing.availability %></h4>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
</div>
