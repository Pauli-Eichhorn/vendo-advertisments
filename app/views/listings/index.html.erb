<body class="listings-index-body">

  <main class="listings-index-main">
    <div class="container-index-listing">

      <div id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <div class="right-container-index">
        <div class='header'>
          <div class="search-bar mx-auto">
            <%= form_tag listings_path, class: "form-search d-flex col-8 mx-auto", method: :get do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Find a Screen"
              %>
              <%= submit_tag "Search", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>

        <div class="container">
          <div class='cards-home'>
            <div class="row">
              <% @listings.each do |listing| %>
                <div class="col">
                  <%= link_to listing_path(listing) do %>
                    <div class='card-index'>

                      <div>
                        <%=  cl_image_tag listing.photo.key, crop: :fill%>
                      </div>
                      <div class='card-index-content'>

                        <div class="text-center">
                          <h4><%= listing.name %></h4>
                        </div>


                        <div class="text-left">
                          <h6><%= listing.description.first(100)%> ...</h6>
                          <h6><strong>üìç</strong> <%= listing.location %></h4>
                          <h6><strong>üè∑</strong> <%= listing.price %> Ôø°/day</h4>
                        </div>

                      </div>

                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

</body>
