<div class='show-container'>
  <%=cl_image_tag @listing.photo.key%>

  <div class='info-text mx-4'>
    <div class="text-center">
      <h1><strong><%= @listing.name %></strong></h1>
      <p><%= @listing.description %></p>
    </div>
    <p><strong>ğŸ“Location:</strong><%= @listing.location %></p>
    <p><strong>ğŸ· Price:</strong><%= @listing.price %>â‚¬</p>
    <p><strong>ğŸ—“ Availability: </strong><%= @listing.availability %></p>
    <div class='btn btn-book mr-sm-4 my-3'><%= link_to "Book this screen", new_listing_booking_path(@listing) %></div>

    <h6><strong>Bookings:</strong></h6>
    <ul>
      <% @listing.bookings.each do |booking| %>
        <li><h6> <%= booking.date_booking%></h6></li>
      <% end %>
    </ul>
    <div class='btn btn-show mr-sm-4'><%= link_to "Back to all screens", listings_path %></div>
    <% if current_user == @listing.user %>
      <div class='btn btn-edit mr-sm-4'><%= link_to 'Edit', edit_listing_path(@listing) %></div>
      <div class='btn btn-destroy mr-sm-4'><%= link_to "Delete listing", listing_path(@listing), method: :delete, data: {confirm: "Are you sure?"}  %></div>
    <% end %>
  </div>
</div>
