
<body class="signup-body">
  <% if current_user.owner == true %>

    <div class="headers">
      <h1 class="header-index-booking"><strong>Partner Requests</strong></h1>
    </div>

    <div class="container">
      <div class='mt-4'>
        <div class="row ">

            <% @partners.reverse.each do |partner| %>
              <div class="col border-line-partners mt-4 p-3">
                <div>
                  <h5 class="card-booking-title text-center"> <%= partner.user.first_name %> <%= partner.user.last_name %></p></h5>
                  <p class="card-booking-text"><strong>Email: </strong><%= partner.user.email %></p>
                  <p class="card-booking-text"><strong>Phone: </strong><%= partner.user.phone %></p>
                  <p class="card-booking-title"><strong>Screen Location: </strong><%= partner.street_name_and_number %>, <%= partner.postal_code %>, <%= partner.city %>, <%= partner.country %></p>
                  <p class="card-booking-text"><strong>Clients Adress: </strong><%= partner.user.address%>, <%= partner.user.zip%>, <%= partner.user.city%>, <%= partner.user.country%></p>
                  <p class="card-booking-text"><strong>Message: </strong><%= partner.message%></p>
                </div>
                <div >
                  <div class="image-box text-center">
                    <% if partner.photo1.present? %>
                      <div class="picture-partner ">
                        <%=cl_image_tag partner.photo1.key, crop: :fill%>
                      </div>
                    <% end %>
                    <% if partner.photo2.present? %>
                      <div class="picture-partner ">
                        <%=cl_image_tag partner.photo2.key, crop: :fill%>
                      </div>
                    <% end %>
                  </div>
                  <%= link_to "Delete", partner_path(partner), class:"button-28 m-1", method: :delete, data: {confirm: "Are you sure?"}  %>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  <% end %>
</body>
